@model ElderSourceApp.Models.CompanyModel

@{
    ViewBag.Title = "Delete A Company";
}
@if (User.IsInRole("Admin"))
{


<h3>Are you sure you want to delete this?</h3>
<div>
    
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Company Name:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CompanyName)
        </dd>

        <dt>
            City:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.City)
        </dd>

        <dt>
            State:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.State)
        </dd>

        <dt>
            Zip Code:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ZipCode)
        </dd>

        <dt>
            Service Type:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CompanyType)
        </dd>

        <dt>
            Phone Number:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Phone)
        </dd>

        <dt>
           Outward Symbol:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.HasSymbol)
        </dd>

        <dt>
            Employees Trained:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EmployeesTrained)
        </dd>

        <dt>
            Has Policies:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.HasPolicies)
        </dd>

        <dt>
           Has Declaration:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.HasDeclaration)
        </dd>

        <dt>
            In Arrears:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.InArrears)
        </dd>
        <dt>
            Date Dues Last Paid:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.LastPaidDate)
        </dd>
        <dt>
            Description:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.description)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
}else
{
    <h4>You do not have permission to access this page.</h4>
}