@model IEnumerable<ElderSourceApp.Models.CompanyModel>

@{
    ViewBag.Title = "Index";
}

<h2>Company Management</h2>
@if (User.IsInRole("Admin"))
{
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            City
        </th>
        <th>
            Zip Code
        </th>
        <th>
            Service
        </th>
        <th>
            Last Paid Date
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CompanyName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.City)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ZipCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CompanyType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastPaidDate)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.CompanyModelID }) |
            @Html.ActionLink("Details", "Details", new { id = item.CompanyModelID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.CompanyModelID })
        </td>
    </tr>
}

</table>
}
else
{
    <h4>You do not have permission to access this page.</h4>
}
