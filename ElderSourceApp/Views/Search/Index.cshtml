@model IPagedList<ElderSourceApp.Models.CompanyListViewModel>
@{
    ViewBag.Title = "Index";
}



    @if (User.IsInRole("Admin") || User.IsInRole("Employee"))
    {
        

            <div class="pagedList" data-elderscript-target="#companyList">
                @Html.PagedListPager(Model, page => Url.Action("Index", new { page }),
                PagedListRenderOptions.MinimalWithItemCountText)
            </div>

            <h2>Company Search</h2>

            <form method="get" action="@Url.Action("Index")" data-elderscript-ajax="true" data-elderscript-target="#companyList">
               
                <div class="section group">
                    <div class="col span_1_of_2">
                        <div class="col span_1_of_2"><b>Company Name:</b></div>
                        <div class="col span_1_of_2"><input type="search" name="companyName" data-elderscript-autocomplete="@Url.Action("Autocomplete")" /></div>
                    </div>

                    <div class="col span_1_of_5">
                        <div class="col span_1_of_2"><b>Company Type:</b></div>
                        <div class="col span_1_of_2"><input type="search" name="companyType" data-elderscript-autocomplete="@Url.Action("Autocomplete")" /></div>

                    </div>

                    <div class="col span_1_of_5">
                        <div class="col span_1_of_2"><b>City:</b></div>
                        <div class="col span_1_of_2"><input type="search" name="city" data-elderscript-autocomplete="@Url.Action("Autocomplete")" /></div>

                    </div>

                    <div class="col span_1_of_5">
                        <div class="col span_1_of_2"><b>Zip Code:</b></div>
                        <div class="col span_1_of_2"><input type="search" name="zipCode" /></div>

                    </div>
                    <div class="span_1_of_2">
                        <div><input type="submit" value="Search" /></div>

                    </div>
                </div>
            </form>
            <br />

            @Html.Partial("_Companies", Model)

        

    @section scripts
{
        }


    } else {<h4>You do not have permission to access this page.</h4> };
    